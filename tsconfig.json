{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/bin" ,"**/*.spec.ts"]
  }
